{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/$1"
    }
  ],
  "functions": {
    "api/daily-report-cron.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/daily-report-generator",
      "schedule": "0 0 * * *"
    }
  ]
}
